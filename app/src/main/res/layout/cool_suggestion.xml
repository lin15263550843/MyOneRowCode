        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="哈哈哈"
        android:textColor="@color/colorWhite" />
    <TextView
        android:id="@+id/cool_suggestion_car_wash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="哈哈哈"
