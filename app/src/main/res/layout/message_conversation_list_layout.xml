<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorD8E0E8"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/message_conversation_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/message_conversation_list_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入消息..."
            android:maxLines="1" />

        <Button
            android:id="@+id/message_conversation_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color30FF05"
            android:text="发送" />
    </LinearLayout>
</LinearLayout>