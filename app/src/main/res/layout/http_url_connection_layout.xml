<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/http_url_connection_Initiate_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发起请求" />

        <Button
            android:id="@+id/okhttp_Initiate_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用okHttp发起请求" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/http_url_connection_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</LinearLayout>