<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lhd.myonerowcode.MediaUseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <Button
                android:id="@+id/media_use_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照" />

            <Button
                android:id="@+id/media_use_album_selection_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相册选取照片" />

            <Button
                android:id="@+id/media_use_play_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="播放音频" />

            <Button
                android:id="@+id/media_use_pause_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂停播放" />

            <Button
                android:id="@+id/media_use_stop_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止播放" />

            <ImageView
                android:id="@+id/media_use_take_photo_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
