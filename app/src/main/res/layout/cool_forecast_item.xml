<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/color777"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/cool_forecast_item_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="start"
        android:text="2018-09-20"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/cool_forecast_item_info_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:text="阵雨"
        android:textColor="@color/colorWhite" />


    <TextView
        android:id="@+id/cool_forecast_item_max_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="end"
        android:text="39°"
        android:textColor="@color/colorWhite" />


    <TextView
        android:id="@+id/cool_forecast_item_min_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="end"
        android:text="29°"
        android:textColor="@color/colorWhite" />
</LinearLayout>